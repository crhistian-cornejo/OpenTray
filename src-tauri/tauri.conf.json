{
  "$schema": "https://schema.tauri.app/config/2",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1421"
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app", "nsis", "msi", "deb", "rpm", "appimage"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "DeveloperTool",
    "shortDescription": "Menubar companion for OpenCode",
    "longDescription": "OpenTray is a menubar application that allows you to monitor and control OpenCode sessions from your system tray.",
    "macOS": {
      "minimumSystemVersion": "10.15",
      "signingIdentity": "-",
      "entitlements": null
    },
    "windows": {
      "certificateThumbprint": null,
      "timestampUrl": "http://timestamp.digicert.com"
    }
  },
  "productName": "OpenTray",
  "version": "0.1.0",
  "identifier": "com.opentray.app",
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQ0RUU3NkJGODgyNkRFMkMKUldRczNpYUl2M2J1Uk5LOXFFVXlxaVdJaVBkZkJrZlYzMzJGWlZkeFF5NWxkVnpFMTdVVXFQYjEK",
      "endpoints": [
        "https://github.com/crhistian-cornejo/OpenTray/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "resizable": false,
        "title": "OpenTray",
        "width": 380,
        "height": 520,
        "decorations": false,
        "transparent": true,
        "visible": false,
        "skipTaskbar": true
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true,
    "withGlobalTauri": true
  }
}
