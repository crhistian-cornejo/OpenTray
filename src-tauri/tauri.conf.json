{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OpenTray Dev",
  "identifier": "com.opentray.dev",
  "version": "0.2.2",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1421"
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "resizable": false,
        "title": "OpenTray",
        "width": 380,
        "height": 520,
        "decorations": false,
        "transparent": true,
        "visible": false,
        "skipTaskbar": true
      },
      {
        "label": "permission",
        "fullscreen": false,
        "resizable": false,
        "title": "Permission Required",
        "width": 340,
        "height": 200,
        "decorations": false,
        "transparent": true,
        "visible": false,
        "skipTaskbar": true,
        "alwaysOnTop": true,
        "url": "index.html#/permission"
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app", "nsis", "msi"],
    "icon": [
      "icons/logo-32x32.png",
      "icons/logo-128x128.png",
      "icons/logo-128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "DeveloperTool",
    "shortDescription": "Menubar companion for OpenCode",
    "longDescription": "OpenTray is a menubar application that allows you to monitor and control OpenCode sessions from your system tray.",
    "macOS": {
      "minimumSystemVersion": "10.15",
      "entitlements": "./entitlements.plist",
      "infoPlist": "Info.plist",
      "hardenedRuntime": true
    }
  }
}
