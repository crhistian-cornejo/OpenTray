{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OpenTray",
  "identifier": "com.opentray.app",
  "build": {
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://127.0.0.1:* https://github.com https://api.github.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob:"
    },
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "resizable": false,
        "title": "OpenTray",
        "width": 380,
        "height": 520,
        "decorations": false,
        "transparent": true,
        "visible": false,
        "skipTaskbar": true
      },
      {
        "label": "permission",
        "fullscreen": false,
        "resizable": false,
        "title": "Permission Required",
        "width": 340,
        "height": 200,
        "decorations": false,
        "transparent": true,
        "visible": false,
        "skipTaskbar": true,
        "alwaysOnTop": true,
        "url": "index.html#/permission"
      }
    ]
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": ["dmg", "app", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "DeveloperTool",
    "shortDescription": "Menubar companion for OpenCode",
    "longDescription": "OpenTray is a menubar application that allows you to monitor and control OpenCode sessions from your system tray.",
    "macOS": {
      "minimumSystemVersion": "10.15",
      "entitlements": null,
      "exceptionDomain": null,
      "infoPlist": "Info.plist",
      "dmg": {
        "appPosition": { "x": 180, "y": 170 },
        "applicationFolderPosition": { "x": 480, "y": 170 },
        "windowSize": { "width": 660, "height": 400 }
      }
    },
    "windows": {
      "nsis": {
        "installMode": "currentUser",
        "displayLanguageSelector": false
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDNGMzM1QUNFMzA2OEM0NEYKUldSUHhHZ3d6bG96UDdodVVhNmZPT2NKR2pnc0MzZjlQbllLaUhRUW5yQ3BwVjdWWGVNcEpVWE4K",
      "endpoints": [
        "https://github.com/crhistian-cornejo/OpenTray/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
